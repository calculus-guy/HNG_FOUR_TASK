# --- RabbitMQ Connection ---
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# --- Redis Connection ---
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# --- API Gateway ---
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=0.0.0.0

# --- User Service ---
USER_SERVICE_PORT=3001
USER_SERVICE_GRPC_PORT=50051
USER_SERVICE_DATABASE_URL=postgres://user:password@postgres:5432/user_db
USER_SERVICE_DATABASE_HOST=postgres
USER_SERVICE_DATABASE_PORT=5432
USER_SERVICE_DATABASE_NAME=user_db
USER_SERVICE_DATABASE_USER=user
USER_SERVICE_DATABASE_PASSWORD=password

# ---- Template Service ----
TEMPLATE_SERVICE_PORT=3002
TEMPLATE_SERVICE_GRPC_PORT=50052
TEMPLATE_SERVICE_DATABASE_URL=postgres://user:password@postgres:5432/template_db
TEMPLATE_SERVICE_DATABASE_HOST=postgres
TEMPLATE_SERVICE_DATABASE_PORT=5432
TEMPLATE_SERVICE_DATABASE_NAME=template_db
TEMPLATE_SERVICE_DATABASE_USER=user
TEMPLATE_SERVICE_DATABASE_PASSWORD=password

# --- Email Service ---
EMAIL_SERVICE_PORT=3003
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_password
SMTP_SECURE=false
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=Notification System

# --- Push Service ---
PUSH_SERVICE_PORT=3004
FCM_SERVER_KEY=your_fcm_server_key
FCM_PROJECT_ID=your_firebase_project_id

# --- PostgreSQL ---
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=notifications_db

# ---- Node Environment ----
NODE_ENV=development

# --- Logging ---
LOG_LEVEL=debug

# --- Circuit Breaker Settings ---
CIRCUIT_BREAKER_TIMEOUT=3000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# --- Retry Settings ---
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# --- Rate Limiting ----
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
